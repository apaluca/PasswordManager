<Window x:Class="PasswordManager.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mvvm="clr-namespace:PasswordManager.Core.MVVM"
        Title="Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Password Manager Login" 
                   FontSize="20" 
                   Margin="20,20,20,10"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

            <TextBlock Text="Username" Margin="0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Password" Margin="0,5"/>
            <PasswordBox x:Name="PasswordBox"
                        Padding="5"
                        Margin="0,0,0,10"
                        mvvm:PasswordBoxBehavior.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <Button Content="Login" 
                    Command="{Binding LoginCommand}"
                    Padding="5"
                    Height="30"
                    Margin="0,10"/>
        </StackPanel>

        <TextBlock Grid.Row="2" 
                   Text="Loading..." 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
            <TextBlock.Visibility>
                <Binding Path="IsBusy">
                    <Binding.Converter>
                        <BooleanToVisibilityConverter/>
                    </Binding.Converter>
                </Binding>
            </TextBlock.Visibility>
        </TextBlock>
    </Grid>
</Window>