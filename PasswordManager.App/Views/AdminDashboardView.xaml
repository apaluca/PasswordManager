<UserControl x:Class="PasswordManager.App.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Administrator Dashboard" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Margin="0,0,0,10"/>
            <Button Content="Refresh" 
                    Command="{Binding RefreshCommand}"
                    HorizontalAlignment="Left" 
                    Width="100"
                    Height="30"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- User Management -->
            <GroupBox Header="User Management" 
                      Grid.Column="0"
                      BorderThickness="1"
                      BorderBrush="#CCCCCC">
                <DockPanel Margin="10">
                    <StackPanel DockPanel.Dock="Bottom" 
                                Orientation="Horizontal" 
                                Margin="0,10,0,0">
                        <Button Content="Add User" 
                                Command="{Binding AddUserCommand}"
                                Width="120"
                                Height="30"
                                Margin="0,0,10,0"/>
                        <Button Content="Deactivate User" 
                                Command="{Binding DeactivateUserCommand}"
                                Width="120"
                                Height="30"
                                Margin="0,0,10,0"/>
                        <Button Content="Reset Password" 
                                Command="{Binding ResetPasswordCommand}"
                                Width="120"
                                Height="30"/>
                    </StackPanel>

                    <ListView ItemsSource="{Binding Users}" 
                             SelectedItem="{Binding SelectedUser}"
                             Margin="0,0,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Username" 
                                              DisplayMemberBinding="{Binding Username}"
                                              Width="120"/>
                                <GridViewColumn Header="Email" 
                                              DisplayMemberBinding="{Binding Email}"
                                              Width="200"/>
                                <GridViewColumn Header="Role" 
                                              DisplayMemberBinding="{Binding Role}"
                                              Width="100"/>
                                <GridViewColumn Header="Status" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Text" Value="Active"/>
                                                                <Setter Property="Foreground" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Text" Value="Inactive"/>
                                                                <Setter Property="Foreground" Value="Red"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Last Login" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastLoginDate, StringFormat={}{0:g}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"/>

            <!-- Activity Log -->
            <GroupBox Header="Recent Activity" 
                      Grid.Column="2"
                      BorderThickness="1"
                      BorderBrush="#CCCCCC">
                <ListView ItemsSource="{Binding RecentActivity}"
                         Margin="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Date" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ActionDate, StringFormat={}{0:g}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="User" 
                                          DisplayMemberBinding="{Binding Username}"
                                          Width="100"/>
                            <GridViewColumn Header="Action" 
                                          DisplayMemberBinding="{Binding Action}"
                                          Width="100"/>
                            <GridViewColumn Header="Details" 
                                          DisplayMemberBinding="{Binding Details}"
                                          Width="200"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>